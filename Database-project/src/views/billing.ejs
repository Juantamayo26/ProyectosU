          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].name %></td>
                <td><%= data[i].cc%></td>
                <td><%= data[i].phone %></td>
                <td><%= data[i].address %></td>
                <td><%= data[i].loans%></td>
                <td><%= data[i].description%></td>
                <td>
                  <a href="Facturacion/<%= data[i].id %>/u" class="btn btn-info">Seleccionar</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</body>
</html>
